	\fi
}

\newcommand{\QAList}[2]{
	\begin{multicols}{2}
		\begin{enumerate}[label=\alph*)]
			\ifdefined\withanswers
			\ForEachX{,}{\item #1}{#2}
			      \else
			      \ForEach{,}{\item #1}{#1}
			      \fi
		\end{enumerate}
	\end{multicols}
}

